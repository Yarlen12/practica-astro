---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <header id="navbar" class="bg-green-950 fixed w-full top-0 left-0 z-50">
    <nav class="container flex items-center justify-between h-16 sm:h-20">
      <!-- poner sm en text -->
      <div class="font-mono text-2xl ml-5">IndorePlants.</div>

      <div
        id="nav-menu"
        class="absolute top-0 left-[-100%] min-h-[80vh] w-full bg-green-950/80 backdrop-blur-sm flex items-center justify-center duration-300 overflow-hidden">
        <ul class="flex flex-col items-center gap-8">
          <li>
            <a href="#home" class="nav-link">Home</a>
          </li>

          <li>
            <a href="#about" class="nav-link">About</a>
          </li>

          <li>
            <a href="#popular" class="nav-link">Popular</a>
          </li>

          <li>
            <a href="#review" class="nav-link">Review</a>
          </li>
        </ul>

        <div class="absolute bottom-0 -right-10 opacity-90">
          <img
            src="/src/assets/img/leaf-1.png"
            alt="hoja de color verde de una planta"
            class="w-32"
          />
        </div>

        <div class="absolute -top-5 -left-5 rotate-90 opacity-90">
          <img
            src="/src/assets/img/leaf-2.png"
            alt="hoja de color verde de una planta"
            class="w-32"
          />
        </div>
      </div>

      <div class="mr-6 text-2xl sm:text-3xl cursor-pointer z-50">
        <i class="ri-menu-4-line" id="hamburger"></i>
      </div>
    </nav>
  </header>
  <script src="/src/assets/js/main.js"></script>
</Layout>
